{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "1.2.6",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon-16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.espn.com/ffl/boxscorequick*",
        "https://*.espn.com/ffl/boxscorequick*"
      ],
      "css": [],
      "js": ["scripts/adjustments.js"]
    }
  ],
  "options_ui": {
    "page": "pages/options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "http://games.espn.com/*",
    "https://games.espn.com/*",
    "http://www.nfl.com/*"
  ]
}
